  <!-- äº¤äº’é€»è¾‘JS -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchBtn = document.getElementById('search-btn');
      const resetBtn = document.getElementById('reset-btn');
      const emptyState = document.getElementById('empty-state');
      const formContainer = document.getElementById('form-container');
      const timelineContainer = document.getElementById('timeline-container');
      const submitBtn = document.getElementById('submit-btn');
      const deliveryMethod = document.getElementById('delivery-method');
      const warehouseTime = document.getElementById('warehouse-time');
      const mobileGuideBtn = document.getElementById('mobile-guide-btn');
      const mobileGuideModal = document.getElementById('mobile-guide-modal');
      const closeGuideBtn = document.getElementById('close-guide-btn');

      // ç§»åŠ¨ç«¯æ“ä½œæŒ‡å¼•æ˜¾ç¤º/éšè—
      mobileGuideBtn.addEventListener('click', function() {
        mobileGuideModal.classList.remove('hidden');
      });
      
      closeGuideBtn.addEventListener('click', function() {
        mobileGuideModal.classList.add('hidden');
      });
      
      // ç‚¹å‡»å¼¹çª—å¤–éƒ¨å…³é—­
      mobileGuideModal.addEventListener('click', function(e) {
        if (e.target === mobileGuideModal) {
          mobileGuideModal.classList.add('hidden');
        }
      });

      // æœç´¢æŒ‰é’®ç‚¹å‡»ï¼šæ˜¾ç¤ºè¡¨å•+æ—¶é—´çº¿ï¼Œéšè—ç©ºçŠ¶æ€
      searchBtn.addEventListener('click', function() {
        // è·å–ä»“åº“é‚®ç¼–å’ŒæŸœå·è¾“å…¥å€¼
        const warehousePostal = document.getElementById('warehouse-postal').value.trim();
        const containerNo = document.getElementById('container-no').value.trim();
        
        // éªŒè¯è¾“å…¥æ˜¯å¦ä¸ºç©º
        if (!warehousePostal || !containerNo) {
          alert('ä»“åº“é‚®ç¼–å’ŒæŸœå·ä¸èƒ½ä¸ºç©ºï¼Œè¯·å¡«å†™å®Œæ•´ä¿¡æ¯åå†æœç´¢ï¼');
          return;
        }
        
        // éªŒè¯ç‰¹å®šå€¼
        if (warehousePostal !== '10000' || containerNo !== 'CSNU8478948') {
          alert('æœªæ‰¾åˆ°åŒ¹é…çš„æ•°æ®ï¼Œè¯·ç¡®è®¤ä»“åº“é‚®ç¼–å’ŒæŸœå·æ˜¯å¦æ­£ç¡®ï¼');
          return;
        }
        
        // éªŒè¯é€šè¿‡ï¼Œæ˜¾ç¤ºæœç´¢ç»“æœ
        emptyState.classList.add('hidden');
        formContainer.classList.remove('hidden');
        timelineContainer.classList.remove('hidden');
        
        // æ£€æŸ¥æäº¤æŒ‰é’®æ˜¯å¦å¯å¯ç”¨
        checkSubmitEnable();
        

      });

      // é‡ç½®æŒ‰é’®ç‚¹å‡»ï¼šæ¸…ç©ºè¾“å…¥ï¼Œæ¢å¤ç©ºçŠ¶æ€
      resetBtn.addEventListener('click', function() {
        document.getElementById('warehouse-postal').value = '';
        document.getElementById('container-no').value = '';
        emptyState.classList.remove('hidden');
        formContainer.classList.add('hidden');
        timelineContainer.classList.add('hidden');
        submitBtn.disabled = true;
        
      });

      // é‚®ç®±ç›¸å…³å˜é‡å’ŒåŠŸèƒ½
      const emailInput = document.getElementById('team-email');
      const emailTags = document.getElementById('email-tags');
      const emailError = document.getElementById('email-error');
      const emailAddresses = ['admin@gogovanus.com']; // åˆå§‹é‚®ç®±
      
      // é‚®ç®±éªŒè¯æ­£åˆ™è¡¨è¾¾å¼
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      
      // åˆå§‹åŒ–æ˜¾ç¤ºé‚®ç®±æ ‡ç­¾
      function initEmailTags() {
        // ä¿å­˜è¾“å…¥æ¡†çš„å½“å‰å€¼
        const currentValue = emailInput.value;
        
        // æ¸…ç©ºå®¹å™¨ï¼ˆé™¤äº†è¾“å…¥æ¡†æœ¬èº«ï¼‰
        Array.from(emailTags.children).forEach(child => {
          if (child !== emailInput) {
            emailTags.removeChild(child);
          }
        });
        
        // æ·»åŠ æ‰€æœ‰é‚®ç®±æ ‡ç­¾ï¼ˆæ’å…¥åˆ°è¾“å…¥æ¡†ä¹‹å‰ï¼‰
        emailAddresses.forEach(email => {
          const tag = document.createElement('div');
          tag.className = 'bg-primary/10 text-primary px-2 py-1 rounded-md text-sm flex items-center gap-1 h-8';
          tag.innerHTML = `
            <span>${email}</span>
            <button type="button" class="delete-email ml-1 text-primary/70 hover:text-primary" data-email="${email}">
              <i class="fas fa-times-circle"></i>
            </button>
          `;
          
          // æ’å…¥åˆ°è¾“å…¥æ¡†ä¹‹å‰
          emailTags.insertBefore(tag, emailInput);
          
          // æ·»åŠ åˆ é™¤äº‹ä»¶
          const deleteBtn = tag.querySelector('.delete-email');
          deleteBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            const emailToRemove = this.getAttribute('data-email');
            const index = emailAddresses.indexOf(emailToRemove);
            if (index > -1) {
              emailAddresses.splice(index, 1);
              initEmailTags();
              checkSubmitEnable(); // æ£€æŸ¥æäº¤æŒ‰é’®çŠ¶æ€
            }
          });
        });
        
        // æ¢å¤è¾“å…¥æ¡†çš„å€¼
        emailInput.value = currentValue;
        
        // èšç„¦è¾“å…¥æ¡†
        setTimeout(() => {
          emailInput.focus();
        }, 0);
      }
      
      // å¤„ç†é‚®ç®±è¾“å…¥
      emailInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter') {
          e.preventDefault();
          const email = this.value.trim();
          
          if (email) {
            // éªŒè¯é‚®ç®±æ ¼å¼
            if (!emailRegex.test(email)) {
              emailError.classList.remove('hidden');
              setTimeout(() => {
                emailError.classList.add('hidden');
              }, 3000);
              return;
            }
            
            // æ£€æŸ¥æ˜¯å¦å·²å­˜åœ¨
            if (emailAddresses.includes(email)) {
              emailError.textContent = 'è¯¥é‚®ç®±å·²æ·»åŠ ';
              emailError.classList.remove('hidden');
              setTimeout(() => {
                emailError.classList.add('hidden');
                emailError.textContent = 'è¯·è¾“å…¥æœ‰æ•ˆçš„é‚®ç®±åœ°å€';
              }, 3000);
              return;
            }
            
            // æ·»åŠ æ–°é‚®ç®±
            emailAddresses.push(email);
            initEmailTags(); // é‡æ–°åˆå§‹åŒ–æ ‡ç­¾
            this.value = ''; // æ¸…ç©ºè¾“å…¥æ¡†
            checkSubmitEnable(); // æ£€æŸ¥æäº¤æŒ‰é’®çŠ¶æ€
          }
        }
      });
      
      // ç‚¹å‡»é‚®ç®±å®¹å™¨æ—¶èšç„¦è¾“å…¥æ¡†
      document.getElementById('email-container').addEventListener('click', function() {
        emailInput.focus();
      });
      
      // é˜²æ­¢ç‚¹å‡»æ ‡ç­¾æ—¶å†’æ³¡å¯¼è‡´å¤±ç„¦
      emailTags.addEventListener('click', function(e) {
        e.stopPropagation();
      });
      
      // åˆå§‹åŒ–é‚®ç®±æ ‡ç­¾
      initEmailTags();
      
      // æ£€æŸ¥æäº¤æŒ‰é’®æ˜¯å¦å¯å¯ç”¨
      function checkSubmitEnable() {
        // æ£€æŸ¥æ˜¯å¦æœ‰è‡³å°‘ä¸€ä¸ªæœ‰æ•ˆçš„é‚®ç®±åœ°å€
        if (emailAddresses.length > 0) {
          submitBtn.disabled = false;
          submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
        } else {
          submitBtn.disabled = true;
          submitBtn.classList.add('opacity-50', 'cursor-not-allowed');
        }
      }

      // ç›‘å¬å¿…å¡«å­—æ®µå˜åŒ–
      deliveryMethod.addEventListener('change', checkSubmitEnable);
      warehouseTime.addEventListener('input', checkSubmitEnable);

      // æäº¤æŒ‰é’®ç‚¹å‡»
      submitBtn.addEventListener('click', function() {
        if (!submitBtn.disabled) {
          // å¯ä»¥åœ¨è¿™é‡Œè·å–æ‰€æœ‰é‚®ç®±åœ°å€
          const allEmails = emailAddresses.join(', ');
          console.log('æäº¤çš„é‚®ç®±åœ°å€:', allEmails);
          alert('é¢„çº¦æäº¤æˆåŠŸï¼\næäº¤çš„é‚®ç®±åœ°å€: ' + allEmails);
        }
      });



      // é€‰é¡¹å¡åˆ‡æ¢ï¼ˆæ•´æŸœ/æ•£è´§ï¼‰
      const tabFull = document.getElementById('tab-full');
      const tabBulk = document.getElementById('tab-bulk');
      
      // åˆå§‹åŒ–é€‰ä¸­çŠ¶æ€
      tabFull.classList.add('text-primary', 'bg-white', 'rounded-md', 'shadow-sm');
      tabFull.classList.remove('text-gray-600');
      tabBulk.classList.add('text-gray-600');
      tabBulk.classList.remove('text-primary', 'bg-white', 'rounded-md', 'shadow-sm');
      
      // æ•´æŸœé€‰é¡¹å¡ç‚¹å‡»äº‹ä»¶
      tabFull.addEventListener('click', () => {
        // æ›´æ–°æ•´æŸœé€‰é¡¹å¡æ ·å¼
        tabFull.classList.add('text-primary', 'bg-white', 'rounded-md', 'shadow-sm');
        tabFull.classList.remove('text-gray-600');
        
        // æ›´æ–°æ•£è´§é€‰é¡¹å¡æ ·å¼
        tabBulk.classList.add('text-gray-600');
        tabBulk.classList.remove('text-primary', 'bg-white', 'rounded-md', 'shadow-sm');
        
        // å¦‚æœéœ€è¦æ ¹æ®ä¸šåŠ¡ç±»å‹åˆ‡æ¢ä¸åŒçš„è¡¨å•å†…å®¹ï¼Œå¯ä»¥åœ¨è¿™é‡Œæ·»åŠ é€»è¾‘
        console.log('å·²åˆ‡æ¢è‡³æ•´æŸœä¸šåŠ¡ç±»å‹');
      });
      
      // æ•£è´§é€‰é¡¹å¡ç‚¹å‡»äº‹ä»¶
      tabBulk.addEventListener('click', () => {
        // æ›´æ–°æ•£è´§é€‰é¡¹å¡æ ·å¼
        tabBulk.classList.add('text-primary', 'bg-white', 'rounded-md', 'shadow-sm');
        tabBulk.classList.remove('text-gray-600');
        
        // æ›´æ–°æ•´æŸœé€‰é¡¹å¡æ ·å¼
        tabFull.classList.add('text-gray-600');
        tabFull.classList.remove('text-primary', 'bg-white', 'rounded-md', 'shadow-sm');
        
        // å¦‚æœéœ€è¦æ ¹æ®ä¸šåŠ¡ç±»å‹åˆ‡æ¢ä¸åŒçš„è¡¨å•å†…å®¹ï¼Œå¯ä»¥åœ¨è¿™é‡Œæ·»åŠ é€»è¾‘
        console.log('å·²åˆ‡æ¢è‡³æ•£è´§ä¸šåŠ¡ç±»å‹');
      });
    });
  </script>
